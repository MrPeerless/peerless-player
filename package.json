  "description": "Peerless Player - listen, discover, explore music",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "postinstall": "electron-builder install-app-deps && electron-rebuild -f -w sqlite3"
  },
  "license": "ISC",
  "author": {
    "name": "Geoff Peerless"
  },
  "dependencies": {
    "electron-updater": "^4.3.1",
    "jimp": "^0.12.1",
    "jquery": "^3.4.1",
    "jquery-validation": "^1.19.0",
    "request": "^2.88.2",
    "sanitize-html": "^1.25.0",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^8.2.3",
    "electron-builder": "^22.6.0",
    "electron-rebuild": "^1.8.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrPeerless/peerless-player.git"
  },
  "win": {
