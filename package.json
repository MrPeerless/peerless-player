{
  "name": "peerless-player",
  "version": "0.4.0",
  "description": "Peerless Player - listen, discover, explore music",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "postinstall": "electron-builder install-app-deps && electron-rebuild -f -w sqlite3"
  },
  "license": "ISC",
  "author": {
    "name": "Geoff Peerless"
  },
  "dependencies": {
    "electron-updater": "^4.3.1",
    "ini": "^1.3.8",
    "jimp": "^0.16.1",
    "jquery": "^3.6.3",
    "jquery-validation": "^1.19.3",
    "jsmediatags": "^3.9.7",
    "lodash": "^4.17.21",
    "request": "^2.88.2",
    "sanitize-html": "^2.3.2",
    "sqlite3": "^5.1.4",
    "y18n": "^4.0.1"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.1.2",
    "electron-rebuild": "^3.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrPeerless/peerless-player.git"
  },
  "win": {
    "icon": "build/icon.ico"
  },
  "build": {
    "extraFiles": [
      "resources"
    ]
  }
}
